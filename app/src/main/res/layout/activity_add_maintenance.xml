<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/tvTitleAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Maintenance Record"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editOdometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Odometer (km)"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <EditText
            android:id="@+id/editCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Cost (PKR)"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <TextView
            android:id="@+id/tvSelectItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Maintenance Items:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <!-- Existing Items -->
        <CheckBox
            android:id="@+id/chkOil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Oil"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkCoolant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Coolant"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkCVT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CVT Fluid"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkPlugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Spark Plugs"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkBrakes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Brake Service"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkFuelFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Fuel Filter"
            android:padding="8dp" />

        <!-- âœ… New Maintenance Items -->
        <CheckBox
            android:id="@+id/chkAirFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Filter"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkACFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AC Filter"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkBrakeFluid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brake Fluid"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkAlignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wheel Alignment"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battery Service"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkTimingChain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timing Chain"
            android:textColor="@color/white"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (optional)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="10dp"
            android:layout_marginTop="14dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Maintenance"
            android:textAllCaps="false"
            android:backgroundTint="#C62828"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
