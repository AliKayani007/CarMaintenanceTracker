<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:id="@+id/tvTitleAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Maintenance Record"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editOdometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Current Odometer (km)"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <EditText
            android:id="@+id/editCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Cost (PKR)"
            android:inputType="numberDecimal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <!-- Service Date Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Date:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editServiceDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Select Date"
                android:inputType="none"
                android:padding="10dp"
                android:textColorHint="#B0B0B0"
                android:textColor="@color/white"
                android:background="@drawable/rounded_input"
                android:focusable="false"
                android:clickable="true" />

            <Button
                android:id="@+id/btnSelectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#C62828"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:elevation="2dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Maintenance Items:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <!-- Existing Items -->
        <CheckBox
            android:id="@+id/chkOil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Oil"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkCoolant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Coolant"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkCVT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CVT Fluid"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkPlugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Spark Plugs"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkBrakes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Brake Service"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkFuelFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Fuel Filter"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkAlignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wheel Alignment"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkThrottleBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Throttle Body Cleaning"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkEngineAirFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engine Air Filter"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkCabinAirFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cabin Air Filter"
            android:textColor="@color/white"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/chkBrakePads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brake Pads"
            android:textColor="@color/white"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (optional)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:padding="10dp"
            android:layout_marginTop="14dp"
            android:textColorHint="#B0B0B0"
            android:textColor="@color/white"
            android:background="@drawable/rounded_input" />

        <!-- Image Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attach Images:"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnAddImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“· Add Images"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="5dp"
                android:padding="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¸ Take Photo"
                android:textAllCaps="false"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginStart="5dp"
                android:padding="12dp"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Image Preview Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="100dp"
            android:maxHeight="300dp"
            android:background="@drawable/rounded_input"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No images selected"
            android:textColor="#B0B0B0"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Maintenance"
            android:textAllCaps="false"
            android:backgroundTint="#C62828"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="70dp"
            android:padding="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
